import logo18 from "@images/client/bigleader.webp";
import logo19 from "@images/client/kftc.svg";
import logo20 from "@images/client/seocho.jpg";
import logo21 from "@images/client/kosme.png";
import logo22 from "@images/client/hanbit.png";
import logo23 from "@images/client/bjpublic.webp";
import logo24 from "@images/client/insight.png";
import logo25 from "@images/client/tta.svg";



// 로고 배열
const partnerLogos = [
  { image: logo1 },
  { image: logo2 },
  { image: logo3 },
