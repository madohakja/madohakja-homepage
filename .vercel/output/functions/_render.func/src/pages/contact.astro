---
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { WithContext, Thing } from "schema-dts";

const addressHeading = "찾아오시는 길:";
const emailHeading = "이메일:";

const contactDetails = {
  addressLine1: "서울특별시 송파구 중대로",
  addressLine2: "207 2층 201-J396호",
  email: "madohakja.inc@gmail.com",
};

// Content for the page title and subtitle
const title = "Contact Us";
const subTitle = "문의사항이 있으시면 언제든지 연락해 주세요.";

// SEO metadata for the page
const seo = {
  title: "마도학자 주식회사",
  description:
    "마도학자 주식회사에 대한 문의 사항이 있으시면 이메일을 통해 연락주세요. AI, 머신러닝, 데이터 분석 등 다양한 분야에서 협업을 환영합니다.",
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  inLanguage: "ko-KR",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "마도학자 주식회사",
  description:
    "마도학자 주식회사는 인공지능, 머신러닝, 데이터 분석 등의 서비스를 제공합니다.",
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "마도학자 주식회사",
    description:
      "마도학자 주식회사는 인공지능, 머신러닝, 데이터 분석 등의 서비스를 제공합니다.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <div class="mx-auto max-w-[85rem] px-4 pb-28 pt-48 sm:px-6 lg:px-8">
    <div class="mb-10 max-w-3xl lg:mb-14">
      <h2 class="text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
        {title}
      </h2>
      <p class="ml-1 mt-1 text-slate-600">{subTitle}</p>
    </div>

    <div class="space-y-14">
      <div class="flex gap-x-5">
        <Icon name="mapPin" />
        <div class="grow">
          <h4 class="font-semibold text-slate-600">{addressHeading}</h4>
          <address class="mt-1 text-sm not-italic text-slate-500">
            {contactDetails.addressLine1}
            <br />
            {contactDetails.addressLine2}
          </address>
        </div>
      </div>

      <div class="flex gap-x-5">
        <Icon name="email" class="size-6 shrink-0 text-slate-600" />
        <div class="grow">
          <h4 class="font-semibold text-slate-600">{emailHeading}</h4>
          <a
            class="mt-1 text-sm text-slate-500 transition-colors duration-300 hover:text-yellow-400 focus:text-slate-400 focus:outline-hidden"
            href={`mailto:${contactDetails.email}`}
          >
            {contactDetails.email}
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
